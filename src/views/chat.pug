extends ./layouts/chat-layout.pug

block content 
    div(class='chat-frame')
        div(class='chat-header')
            h2(class='chat-title') Mongolia Chat
        div(class='chat-messages')
            p(class='meta')=time 
        div(class='chat-input')
            form(id='chat-form')
                input(type='text' id='msg' name='msg' placeholder='Enter message' required autocomplete='off')
                button(type='submit')='>'

        